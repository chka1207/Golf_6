
@model System.Data.DataTable
@using System.Data;

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.12.4.js"></script>
<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<h2>Bokningsschema</h2>

<div class="left-block" style="max-width:600px">
    <input type="button" class="btn btn-info btn-lg pull-left" id="datepicker1" value="Välj datum" style="margin-bottom:25px">
    

    <!-- RedigerinsModal -->
    <div id="redigeringsModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Innehåll-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title">Valt datum och tid</h3>
                </div>

                <div class="modal-body">
                    <h4>Lägg till fler spelare</h4>
                    <div class="col-lg-6">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Sök">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>

                        </form>
                        <div class="input-group" style="margin-top:20px">

                            <input type="text" class="form-control" placeholder="Förnamn & Efternamn" style="margin-bottom:5px">
                            <button type="button" class="btn btn-primary">Lägg till</button>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <ul class="list-group">
                            <li class="list-group-item">Inbokad spelare</li>
                            <li class="list-group-item">Inbokad spelare</li>
                            <li class="list-group-item">Inbokad spelare</li>
                            <li class="list-group-item">Inbokad spelare</li>
                        </ul>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-lg" data-dismiss="modal">Avbryt</button>
                    <button type="button" class="btn btn-lg btn-danger" data-dismiss="modal">Avboka</button>
                    <button type="button" class="btn btn-lg btn-info" data-dismiss="modal">Spara</button>
                </div>
            </div>

        </div>
    </div>


    <table class="table table-striped table-responsive table-bordered" id="tableMedlemBokar">
        <thead>
            <tr>
                <th contenteditable="false">Tid</th>

                <th>HCP</th>
                <th>Kön</th>
                <th>Boka</th>
                <th>Redigera</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">07.00</th>
                <td>HCP</td>
                <td>Symboler för kvinna/man?</td>
                <td style="text-align:center;"> <input id="boka" type="checkbox" value="1"></td>
                <td><button type="button" class="btn btn-warning btn-group-sm" data-toggle="modal" data-target="#redigeringsModal">Redigera</button></td>
            </tr>
  
            <tr>
                <th scope="row">07.10</th>
                <td>HCP</td>
                <td>Symboler för kvinna/man?</td>
                <td style="text-align:center;"> <input id="boka" type="checkbox" value="1"></td>
                <td><button type="button" class="btn btn-warning btn-group-sm" data-toggle="modal" data-target="#redigeringsModal">Redigera</button></td>
            </tr>
        </tbody>

    </table>

    <button type="button" class="btn btn-danger btn-lg" style="margin-right:20px">Avboka alla tider</button>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#bokningsModal">Boka</button>

    @*Bokningsmodal*@
    <div id="bokningsModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Valt datum och tid</h4>
                </div>
                <div class="modal-body">
                    <p><strong>Välj spelare</strong></p>
                    <div class="col-lg-6">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Sök">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </div>
                            </div>

                        </form>
                        <div class="input-group" style="margin-top:20px">

                            <input type="text" class="form-control" placeholder="Förnamn & Efternamn" style="margin-bottom:5px">
                            <button type="button" class="btn btn-primary">Lägg till</button>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <ul class="list-group">
                            <li class="list-group-item">?</li>
                            <li class="list-group-item">?</li>
                            <li class="list-group-item">?</li>
                            <li class="list-group-item">?</li>
                        </ul>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-lg" data-dismiss="modal">Avbryt</button>
                    <button type="button" class="btn btn-lg btn-info" data-dismiss="modal">Boka</button>
                </div>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        $('#datepicker1').datepicker();

    });
    var currentDate = $(".selector").datepicker("getDate");
    $.datepicker.regional['sv'] = {
        closeText: 'Stäng',
        prevText: '< Föregående',
        nextText: 'Nästa >',
        currentText: 'Nu',
        monthNames: ['Januari', 'Februari', 'Mars', 'April', 'Maj', 'Juni', 'Juli', 'Augusti', 'September', 'Oktober', 'November', 'December'],
        monthNamesShort: ['Jan', 'Feb', 'Mar', 'Apr', 'Maj', 'Jun', 'Jul', 'Aug', 'Sep', 'Okt', 'Nov', 'Dec'],
        dayNamesShort: ['Sön', 'Mån', 'Tis', 'Ons', 'Tor', 'Fre', 'Lör'],
        dayNames: ['Söndag', 'Måndag', 'Tisdag', 'Onsdag', 'Torsdag', 'Fredag', 'Lördag'],
        dayNamesMin: ['Sö', 'Må', 'Ti', 'On', 'To', 'Fr', 'Lö'],
        weekHeader: 'Не',
        dateFormat: 'yy-mm-dd',
        firstDay: 1,
        isRTL: false,
        showMonthAfterYear: false,
        yearSuffix: ''
    };
    $.datepicker.setDefaults($.datepicker.regional['sv']);


</script>
