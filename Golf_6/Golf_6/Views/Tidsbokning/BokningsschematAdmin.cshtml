                string hcp = " ";
                string medlemsinfo = "";
                for (int i = 0; i <= 10; i++)
                {
                    int räknare = 0;
                    string columnFärg = "columnGreen";
                    foreach (Tidsbokning t in ViewBag.List)
                    {
                        if (t.Tid.ToString("HHmm") == allt.ToString("HHmm"))
                        {
                            räknare++;
                            kön += t.MedlemKön + " ";
                            hcp += t.MedlemHCP.ToString() + " ";
