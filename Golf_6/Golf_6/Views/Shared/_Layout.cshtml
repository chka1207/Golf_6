<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hålslaget", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Golfbanan", "Golfbanan", "Home")</li>
                    <li>@Html.ActionLink("Bokning & Priser", "BokningPriser", "Home")</li>
                    <li>@Html.ActionLink("Tävlingar", "Tävlingar", "Home")</li>
                    <li>@Html.ActionLink("Restauranger", "Restauranger", "Home")</li>
                    <li>@Html.ActionLink("Om", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakta oss", "Contact", "Home")</li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <address>
                Hålslagets golfbana<br />
                Gatan 23, Orten<br /><br />
                <abbr title="Phone"><strong>Vid frågor, ring oss på:</strong></abbr>
                070-12 34 567
            </address>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/JavaScript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
