<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Medlemssidor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Start", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Boka/Avboka", "BokningsschemaAdmin", "Tidsbokning")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Medlemmar
                            <span class="caret glyphicon glyphicon-menu-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ny medlem", "RegistreraNyMedlem", "Admin")</li>
                            <li>@Html.ActionLink("Redigera medlem", "AllaMedlemmar", "Admin")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Säsong", "HanteraSasong", "Admin")</li>


                </ul>
                <a class="btn btn-primary btn-lg pull-right" @Html.ActionLink("Logga ut", "LogOut", "Admin")</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <address>
                Hålslagets golfbana<br />
                Gatan 23, Orten<br /><br />
                <abbr title="Phone"><strong>Vid frågor, ring oss på:</strong></abbr>
                070-12 34 567
            </address>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/JavaScript.js")
    @RenderSection("scripts", required: false)
</body>
</html>