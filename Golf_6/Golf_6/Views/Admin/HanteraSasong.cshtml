
@using System.Globalization
@using Golf_6.Models
@model Golf_6.ViewModels.HanteraSasongViewModel
@{
    ViewBag.Title = "HanteraSasongen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Styles.Render("~/Content/calendar.css")

<br /><br /><br /><br /><br />
@*Hämtar kalender för säsongens start och slutdatum
    ViewBag.AktuellaDatum hämtas från AdminController.*@
@Html.Raw(@ViewBag.AktuellaDatum) @* @Html.Raw hanterar html som ligger i koden.*@

@using (Html.BeginForm("HanteraSasong", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Hantera säsong</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.HanteraSasong.SasongStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HanteraSasong.SasongStart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HanteraSasong.SasongStart, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.HanteraSasong.SasongSlut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HanteraSasong.SasongSlut, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HanteraSasong.SasongSlut, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uppdatera datum för säsong" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tillbaka", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
