<h2>Redigera befintlig medlem</h2>

<div>
    <table id="alla_medlemmar" class="display responsive" cellspacing="0">
    
        <thead>
        <tr>
            @foreach (DataColumn x in Model.Columns)
            {
                <th>@x.ColumnName</th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                @foreach (DataColumn x in Model.Columns)
                {
                    <td>@row[x.ColumnName]</td>
                }
            </tr>
        }
        </tbody>
    </table>
</div>

