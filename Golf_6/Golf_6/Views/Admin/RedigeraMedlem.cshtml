@model System.Data.DataTable
@using System.Data;

@*@{
    ViewBag.Title = "AllaMedlemmar";
}*@

@{
    Layout = "~/Views/Shared/_LayoutMedlem.cshtml";
}

<h2>Redigera befintlig medlem</h2>

@*<table class="table table-striped table-responsive table-bordered">*@
<table id="alla_medlemmar" class="display table-hover">
    
    <thead>
        <tr>
            @foreach (DataColumn x in Model.Columns)
            {
                <th>@x.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
            {
            <tr>
                @foreach (DataColumn x in Model.Columns)
                {
                    <td>@row[x.ColumnName]</td>
                }
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Tillbaka", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
