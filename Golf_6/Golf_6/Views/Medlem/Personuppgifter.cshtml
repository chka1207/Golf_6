@model Golf_6.Models.Medlem


@{
    ViewBag.Title = "Personuppgifter";
    Layout = "~/Views/Shared/_LayoutMedlem.cshtml";
}


@using (Html.BeginForm("UppdateraPersonuppgifter", "Medlem", FormMethod.Post))
{
<div class="container">
    <div class="row">
        <h2>Personuppgifter</h2>


        <form method="post" id="personuppgifterForm" class="form-horizontal">
            <fieldset>
          
                <legend>Uppdatera dina&nbsp;personuppgifter&nbsp;här:</legend>
        
                <div class="form-group">
                   
                    <div class="col-md-4">
                        <label>Förnamn</label>
                        <input name="fornamninput" value="@Html.DisplayFor(model => model.Förnamn)" class="form-control input-md" type="text">
                     
                        <span class="help-block"> </span>
                    </div>
                </div>
               
                <div class="form-group">
                   
                    <div class="col-md-4">
                        <label>Efternamn</label>
                        <input name="efternamninput" value="@Html.DisplayFor(model => model.Efternamn)" class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>
               
                <div class="form-group">
               
                    <div class="col-md-4">
                        <label>Adress</label>
                        <input name="adressinput"value="@Html.DisplayFor(model => model.Adress)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>
               
                <div class="form-group">
                   
                    <div class="col-md-4">
                        <label>Ort</label>
                        <input name="ortinput" value="@Html.DisplayFor(model => model.Ort)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>
         
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Postnummer</label>
                        <input name="postnummerinput" value="@Html.DisplayFor(model => model.Postnummer)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>

                <div class="form-group" >
                    <div class="col-md-4">
                        <label>Email</label>
                        <input name="emailinput" value="@Html.DisplayFor(model => model.Email)" class="form-control input-md" type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>
                <!-- Text input-->
                <div class="form-group">
                    <div class="col-md-4">
                        <label>Telefonnummer</label>
                        <input name="telefonnummerinput" value="@Html.DisplayFor(model => model.Telefonnummer)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <label>HCP</label>
                        <input name="hcpinput" value="@Html.DisplayFor(model => model.Hcp)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <label>Kön</label>
                        <input name="koninput" value="@Html.DisplayFor(model => model.Kön)" class="form-control input-md"  type="text">
                        <span class="help-block"> </span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Uppdatera</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>

</div>

}