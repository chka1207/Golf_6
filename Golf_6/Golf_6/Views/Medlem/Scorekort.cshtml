@using Golf_6.Models;
@using System.Data;
@{
    Layout = "~/Views/Shared/_LayoutMedlem.cshtml";
}

<h2>Scorekort</h2>

<div class="center-block">
    <table id="genereraScorekort" class="table table-striped table-responsive table-bordered" cellspacing="0" style="width: auto">        
        
        <thead align="center" valign="middle">
            <tr>
                @foreach (DataColumn x in Model.Columns)
                {
                    <th align="center" valign="middle">@x.ColumnName</th>
                }
                <th>HCP</th>
                <th>Placeholder</th>
                <th>Placeholder</th>
                <th>Placeholder</th>
                <th>Placeholder</th>

            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    @foreach (DataColumn x in Model.Columns)
                    {
                        <td align="center">@row[x.ColumnName]</td>
                    }
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>

    </table>

</div>