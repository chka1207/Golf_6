@model System.Data.DataTable
@using Golf_6.Controllers;
@using Golf_6.Models;
@using System.Collections.Generic;
@using System.Data
@{
    ViewBag.Title = "KommandeTävling";
}

@{
    if (User.IsInRole("1"))
    {
        Layout = "~/Views/Shared/_LayoutMedlem.cshtml";
    }
    else if (User.IsInRole("2"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>@ViewBag.Message</h2>

<div>
    <table id="alla_medlemmar" class="table table-striped table-responsive table-bordered">

        <thead>
            <tr>
                @foreach (DataColumn x in Model.Columns)
            {
                    <th>@x.ColumnName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    @foreach (DataColumn x in Model.Columns)
                {
                        <td>@row[x.ColumnName]</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>